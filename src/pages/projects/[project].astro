---
import Layout from "../../layouts/Layout.astro";
import IndividualProject from "../../components/IndividualProject.astro";
import "../../styles/individual-project.css";

export async function getStaticPaths() {
  const projects = await Astro.glob("../../projects/*.md");

  return projects.map((project) => {
    return {
      params: {
        project: project.frontmatter.slug,
      },
      props: {
        project,
      },
    };
  });
}

const { Content, frontmatter } = Astro.props.project;
---

<Layout title={frontmatter.title}>
  <IndividualProject {Content} {frontmatter} />
</Layout>
