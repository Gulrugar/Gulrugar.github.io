<!-- Contact Form -->
<div class="container">
  <div class="contact" id="contact">
    <h3>Contact Me</h3>
    <form
      action="https://formsubmit.co/0f101cf2345327ed3a616370ddf3d25b"
      method="POST"
      class="contact__form"
    >
      <input
        type="hidden"
        name="_subject"
        value="Contact Submit from Portfolio Website"
      />
      <input type="hidden" name="location" value="homepage" />
      <input type="hidden" name="_next" value="https://gulrugar.github.io" />
      <p>
        <label for="name">Name (optional)</label>
        <input type="text" name="name" />
      </p>
      <p>
        <label for="company">Company (optional)</label>
        <input type="text" name="company" />
      </p>
      <p>
        <label for="email">Email (required)</label>
        <input type="email" name="email" required />
      </p>
      <p>
        <label for="phone">Phone (optional)</label>
        <input type="tel" name="phone" />
      </p>

      <p class="full">
        <label for="message">Message (required)</label>
        <textarea
          name="message"
          placeholder="Enter your message"
          rows="5"
          required></textarea>
      </p>
      <p class="full">
        <button type="submit">Submit</button>
      </p>
    </form>
  </div>
</div>

<style>
  /* Contact Form TM */

  .container {
    display: flex;
    justify-content: center;
    margin: 0 auto;
    padding: 1em;
  }

  .contact {
    box-shadow: var(--bs);
  }

  .contact h3 {
    text-align: center;
  }

  .contact > * {
    padding: 1em;
  }

  /* Contact Form TM > Form Styles */
  .contact form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-gap: 20px;
  }

  .contact form label {
    display: block;
  }

  .contact form p {
    margin: 0;
  }

  .contact form .full {
    grid-column: 1 / 3;
  }

  .contact form button,
  .contact form input,
  .contact form textarea {
    width: 100%;
    padding: 1em;
    border: 1px solid var(--clr-dark);
  }

  .contact form button {
    background: var(--clr-accent);
    font-size: var(--fs-h3);
    border: none;
  }

  .contact form button:hover {
    background: var(--clr-dark);
    color: var(--clr-light);
    transition: 0.5s;
  }

  /* Contact Form TM > Large Screens */

  @media (min-width: 800px) {
    .contact > * {
      padding: 2em;
    }

    .contact h3 {
      padding: 2em 0 1em;
    }
  }
</style>
