<header class="header" id="home">
  <div>
    <div class="logo animation">
      <a href="/#home">
        <img src="/images/devDrew.png" alt="" />
      </a>
    </div>
    <nav class="desktop-menu">
      <ul>
        <li>
          <a href="/projects" class="flow-animation">Projects</a>
        </li>
        <li>
          <a href="/#services">My Services</a>
        </li>
        <li>
          <a href="/#about">About Me</a>
        </li>
        <li>
          <a href="/#work">My Work</a>
        </li>
        <li>
          <a href="/#contact">Contact</a>
        </li>
      </ul>
    </nav>
    <button class="mobile-menu__toggle" aria-label="toggle navigation">
      <span class="hamburger"></span>
    </button>
    <nav class="mobile-menu">
      <ul class="mobile-menu__list">
        <li class="mobile-menu__item">
          <a href="/#services" class="mobile-menu__link flow-animation"
            >Projects</a
          >
        </li>
        <li class="mobile-menu__item">
          <a href="/#services" class="mobile-menu__link">My Services</a>
        </li>
        <li class="mobile-menu__item">
          <a href="/#about" class="mobile-menu__link">About Me</a>
        </li>
        <li class="mobile-menu__item">
          <a href="/#work" class="mobile-menu__link">My Work</a>
        </li>
        <li class="mobile-menu__item">
          <a href="/contact" class="mobile-menu__link">Contact</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  /* Header */

  .header {
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  }

  .header > div {
    display: flex;
    position: relative;
    top: 0;
    left: 0;
    justify-content: space-between;
    align-items: center;
    height: 100px;
    padding: 0 30px;
    max-width: 1188px;
    margin: 0 auto;
  }

  .logo {
    max-width: 178px;
  }

  /* TM Header */
  .desktop-menu {
    font-weight: var(--fw-bold);
    font-size: 1.2rem;
    display: none;
  }

  .desktop-menu ul {
    display: flex;
    margin: 0;
    padding: 0;
  }

  .desktop-menu ul li {
    margin-right: 1.2rem;
    padding-bottom: 2px;
  }

  /* Header menu item bottom border */
  ul {
    list-style: none;
  }

  a {
    text-decoration: none;
    color: var(--clr-dark);
  }

  ul li {
    position: relative;
  }

  ul li a::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--clr-accent);
    transform: scaleX(0);
    transition: transform 0.6s cubic-bezier(0.19, 1, 0.22, 1);
  }

  ul li a:hover::after {
    transform: scaleX(1);
  }

  /* Mobile menu */
  .mobile-menu {
    position: fixed;
    background: var(--clr-dark);
    color: var(--clr-light);
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 100;
    display: none;
    transform: translateX(100%);
    transition: transform 250ms cubic-bezier(0.5, 0, 0.5, 1);
  }

  .mobile-menu__list {
    list-style: none;
    display: flex;
    height: 100%;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
    margin: 0;
    padding: 90px;
  }

  .mobile-menu__link {
    color: inherit;
    font-weight: var(--fw-bold);
    font-size: 1.5rem;
    text-decoration: none;
  }

  .mobile-menu__link:hover {
    color: var(--clr-accent);
  }

  .mobile-menu__toggle {
    padding: 0.5em;
    background: transparent;
    border: 0;
    cursor: pointer;
    position: absolute;
    right: 2.25rem;
    top: 2.25rem;
    z-index: 1000;
  }

  /* Hamburger */

  .hamburger {
    display: block;
    position: relative;
  }

  .hamburger,
  .hamburger::before,
  .hamburger::after {
    background: var(--clr-dark);
    width: 2em;
    height: 3px;
    border-radius: 1em;
    transition: transform 250ms ease-in-out;
  }

  .hamburger::before,
  .hamburger::after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
  }

  .hamburger::before {
    top: 6px;
  }
  .hamburger::after {
    bottom: 6px;
  }

  /* Orange Red Flowing Text */
  .flow-animation,
  .flow-animation:hover {
    background: linear-gradient(
      127deg,
      rgba(254, 217, 81, 1) 11%,
      rgba(255, 70, 199, 1) 81%
    );
    background-size: 200% 200%;
    animation: flowingAnimation 2s ease-in-out infinite;
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
  }

  .flow-animation::after {
    background: var(--clr-gradient);
  }

  @keyframes flowingAnimation {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }

  /* Media Queries */
  @media (min-width: 800px) {
    .desktop-menu {
      display: block;
    }

    .mobile-menu__toggle {
      display: none;
    }
  }
</style>

<script>
  import "../js/nav.js";
</script>
