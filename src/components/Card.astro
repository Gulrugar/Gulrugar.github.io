---
import { Icon } from "astro-icon";
import CopyToClipboardBtn from "./CopyToClipboardBtn.astro";
const { lazyLoading = false } = Astro.props;
const {
  image = "/images/project-placeholder.jpg",
  badge,
  title,
  tags,
  type,
  passwordProtected,
  link,
  githubLink,
  shortIntro,
  storePassword,
} = Astro.props.project.frontmatter;
---

<div class="blog-card">
  <a href={link} class="img-link" target="_blank">
    <img
      src={image}
      alt=""
      class="img portfolio__img"
      loading={lazyLoading ? "lazy" : "eager"}
    />
    {
      badge == "New" ? (
        <p class="portfolio__item-badge portfolio__item-badge--new">
          &#9734; New &#9734;
        </p>
      ) : (
        ""
      )
    }
    {
      badge == "Updated" ? (
        <p class="portfolio__item-badge">&#9734; Updated &#9734;</p>
      ) : (
        ""
      )
    }
  </a>

  <div class="title-content">
    <h3 class="h3">{title}</h3>
    <hr class="hr" />
  </div>
  <p class="card-info">
    {shortIntro}
  </p>
  <div>
    <div
      class="tag-list"
      style=`${
      passwordProtected ? "" : "margin-bottom: 20px"
    }`
    >
      {
        tags &&
          tags.map((tag) => (
            <span class="tag" style={`color: var(--tags-${tag}, transparent);`}>
              {tag}
            </span>
          ))
      }
    </div>
  </div>

  {passwordProtected && <CopyToClipboardBtn {storePassword} />}

  <ul class="utility-list">
    <a href={link} class="btn" target="_blank"
      >View {type} <i class="fa-solid fa-arrow-up-right-from-square"></i></a
    >
    <a href={githubLink} class="btn" target="_blank"
      >{type} Preview <i class="fa-solid fa-arrow-up-right-from-square"></i></a
    >
  </ul>
</div>

<style>
  /* Badges */
  .portfolio__item-badge {
    background: var(--clr-accent);
    color: #fff;
    font-size: var(--fs-h4);
    font-weight: var(--fw-bold);
    padding: 5px 10px;
    border-radius: 20px;
    border: 2px solid #fff;
    position: absolute;
    right: 5px;
    top: 0;
  }

  .portfolio__item-badge--new {
    background: var(--clr-gradient);
    color: var(--clr-light);
  }

  /* .bhtXlo */
  .blog-card {
    color: var(--clr-light);
    border-radius: 10px;
    background-color: var(--clr-dark);
    box-shadow: 1px 1px 10px var(--clr-accent);
    text-align: center;
    overflow: hidden;
    width: 344px;
  }

  .img-link {
    position: relative;
    display: block;
    overflow: hidden;
  }

  .img-link:hover img {
    transform: scale(1.1);
  }

  .img {
    object-fit: cover;
    transition: transform 500ms cubic-bezier(0.5, 0, 0.5, 1);
  }

  .title-content {
    text-align: center;
    width: 100%;
  }

  .h3 {
    margin: 15px 0 0 0;
    font-weight: 600;
    letter-spacing: 2px;
    color: var(--clr-accent);
    padding: 0px;
    font-size: 1.5rem;
  }

  .hr {
    width: 50px;
    height: 3px;
    margin: 20px auto;
    border-radius: 0px none;
    border: 0;
    background: rgb(208, 187, 87);
  }

  .card-info {
    padding: 0 1em;
    color: #fff;
    line-height: 24px;
    text-align: justify;
  }

  .tag-list {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    text-align: center;
    font-weight: bold;
    margin: 0 1rem;
  }

  .tag {
    margin-left: 0.5rem;
  }

  .tag:not(:last-child)::after {
    content: ",";
    color: var(--clr-light);
  }

  .password {
    margin-top: 0.5rem;
  }

  .utility-list {
    padding: 0 20px;
    display: flex;
    flex-direction: column;
    gap: 10px 0;
    justify-content: space-around;
    margin: 0.5rem 0 1.5rem 0;
  }

  .btn {
    display: block;
    padding: 0.75em;
  }

  .btn i {
    margin-left: 0.5rem;
  }

  .btn:hover {
    transform: scale(1.05);
  }

  @media screen and (min-width: 416px) {
    .blog-card {
      width: 400px;
    }
  }
</style>
